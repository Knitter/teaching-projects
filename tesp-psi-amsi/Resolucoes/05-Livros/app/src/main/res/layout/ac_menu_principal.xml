<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/act_menu_principal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="pt.ipleiria.estg.livros.MenuPrincipal"
    android:orientation="vertical"
    android:background="@color/background">

    <TextView
        android:text="@string/menu_titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/menu_titulo_margem_vertical"
        android:textColor="@color/menu_font"
        android:textSize="@dimen/menu_titulo_tamanho_letra"
        android:textStyle="italic"
        android:id="@+id/tvTituloMenu"/>

    <Button
        android:text="@string/menu_btn_lista_livros"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/menu_btn_margem_horizontal"
        android:layout_marginRight="@dimen/menu_btn_margem_horizontal"
        android:layout_marginBottom="@dimen/menu_btn_margem_vertical"
        android:background="@drawable/border_btn_menu"
        android:textColor="@color/menu_font"
        android:textSize="@dimen/menu_btn_tamanho_letra"
        android:id="@+id/btnListaLivros"/>

    <Button
        android:text="@string/menu_btn_galeria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/menu_btn_margem_horizontal"
        android:layout_marginRight="@dimen/menu_btn_margem_horizontal"
        android:layout_marginBottom="@dimen/menu_btn_margem_vertical"
        android:background="@drawable/border_btn_menu"
        android:textColor="@color/menu_font"
        android:textSize="@dimen/menu_btn_tamanho_letra"
        android:id="@+id/btnGaleria"/>

    <Button
        android:text="Novo Livro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/menu_btn_margem_horizontal"
        android:layout_marginRight="@dimen/menu_btn_margem_horizontal"
        android:background="@drawable/border_btn_menu"
        android:textColor="@color/menu_font"
        android:textSize="@dimen/menu_btn_tamanho_letra"
        android:id="@+id/btnAdicionarLivro"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/info"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/ibSobre"
            android:background="@color/background"/>
    </RelativeLayout>

</LinearLayout>
