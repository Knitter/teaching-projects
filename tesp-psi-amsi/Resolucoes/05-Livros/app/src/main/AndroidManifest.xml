<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="pt.ipleiria.estg.livros">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MenuPrincipal"
            android:label="@string/ac_label_menu">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".ListaLivros"
            android:label="@string/ac_label_lista">
            <intent-filter>
                <action android:name="pt.ipleiria.estg.livros.LISTA"/>

                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".Galeria"
            android:label="@string/ac_label_galeria">
            <intent-filter>
                <action android:name="pt.ipleiria.estg.livros.GALERIA"/>

                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <activity android:name=".AdicionarLivro" android:label="@string/ac_label_adicionar_livro">
            <intent-filter>
                <action android:name="pt.ipleiria.estg.livros.ADICIONAR"/>

                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".Sobre"
            android:label="@string/ac_label_sobre">
            <intent-filter>
                <action android:name="pt.ipleiria.estg.livros.SOBRE"/>

                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

    </application>

</manifest>