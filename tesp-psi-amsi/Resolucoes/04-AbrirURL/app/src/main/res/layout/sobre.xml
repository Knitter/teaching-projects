<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sobre"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="pt.ipleiria.estg.abrirurl.Sobre">

    <TextView
        android:text="Sobre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/tvLabelSobre"
        android:textColor="@color/vermelho"
        android:textSize="20sp"/>

    <TextView
        android:text="Autores"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvLabelAutores"
        android:layout_below="@+id/tvLabelSobre"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:textColor="@color/vermelho"/>

    <TextView
        android:text="Nome do autor 1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvLabelAutores"
        android:layout_alignParentStart="true"
        android:layout_marginStart="25dp"
        android:id="@+id/tvAutor1"/>

    <TextView
        android:text="Nome do autor 2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvAutor1"
        android:layout_alignStart="@+id/tvAutor1"
        android:id="@+id/tvAutor2"
        android:layout_alignParentEnd="true"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ipl"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/ivLogo"/>

    <TextView
        android:text="Descrição da aplicação ..."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvAutor2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="55dp"
        android:id="@+id/tvDescricao"/>

    <TextView
        android:text="nr. aberturas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/tvNrAberturas"/>

</RelativeLayout>
